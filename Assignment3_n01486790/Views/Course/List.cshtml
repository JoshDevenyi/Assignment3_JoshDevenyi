
@model IEnumerable<Assignment3_n01486790.Models.Course>

@{
    ViewBag.Title = "List";
}

<h2>List of Courses</h2>

<form class="search-bar">
    <input type="text" name="SearchKey" autocomplete="off" />
    <input type="submit" value="Search" />
</form>

<div class ="info-box">
    @foreach (var Course in Model)
    {
        <p><a href="/Course/Show/@Course.CourseId">@Course.CourseCode: @Course.CourseName</a></p>
    } 
</div>

 